# .env.example - Copia este archivo como .env y ajusta las variables

# API Configuration
API_TITLE="API de Predicción de Precios de Autos"
API_VERSION="1.0.0"
API_DESCRIPTION="API para predecir precios de automóviles usando modelos de ML"

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://myuser:mypass@db:5432/mydb

# PostgreSQL Configuration
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypass
POSTGRES_DB=mydb

# Backend URL (for frontend)
BACKEND_URL=http://localhost:8000

# CORS Configuration
CORS_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO

# Streamlit Configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false